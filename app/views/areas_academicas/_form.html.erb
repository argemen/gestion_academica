<%= form_for(@area_academica) do |f| %>
  <% if @area_academica.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@area_academica.errors.count, "error") %> prohibited this area academica from being saved:</h2>

      <ul>
      <% @area_academica.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="panel-body nopadding">
<%= f.hidden_field :institucion_id, :id => 'institucion_id'%>
  <div class="form-group">
    <%= f.label :institucion, class: 'col-sm-4 control-label' %>
    
    <div class="col-sm-8"><%= f.autocomplete_field :institucion_nombre, autocomplete_institucion_nombre_instituciones_path, :update_elements => {:id => '#institucion_id'}, placeholder: 'Ingrese nombre de la Institucion', multiple: false, class: 'form-control' %></div>
  </div>
  <div class="form-group">
    <%= f.label :nombre, class: 'col-sm-4 control-label' %>
    <div class="col-sm-8"><%= f.text_field :nombre, placeholder: 'Ingrese nombre del area academica', autocomplete: 'off', class: 'form-control' %></div>
  </div>
  <div class="form-group">
    <%= f.label :telefono, class: 'col-sm-4 control-label' %>
    <div class="col-sm-8"><%= f.text_field :telefono, placeholder: 'Ingrese telefono del area academica', autocomplete: 'off', class: 'form-control' %></div>
  </div>
  <div class="panel-footer">
    <button type="submit" class="btn btn-primary mr5">Guardar</button>
    <button type="reset" class="btn btn-dark">Limpiar</button>
</div>
<% end %>
</div><!-- panel-body -->
