<% if notice %>
<div class="alert alert-success">
 <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
 <%= notice %>
 </div>
<% end %>
<%= link_to 'Agregar', new_planificacion_path, :class=>'btn btn-success btn-sm mr5', :data => {:toggle => 'modal',:target => '.bs-example-modal-panel0'} %>
    <table id="basicTable" class="table table-striped table-bordered responsive">
      <thead class="">
        <tr>
          <th>Semestre</th>
          <th>Carrera</th>
          <th>Unidad curricular</th>
          <th>Seccion</th>
          <th>Lapsos</th>
          <th>Acciones</th>
          <th>Detalle</th>
          <th>Reportes</th>
        </tr>
      </thead>

      <tbody>
        <% @planificaciones.each do |planificacion| %>
          <tr>
            <td><%= planificacion.semestre.nombre %></td>
            <td><%= planificacion.carrera.nombre %></td>
            <td><%= planificacion.unidad_curricular.nombre %></td>
            <td><%= planificacion.seccion.nombre %></td>
            <td><%= planificacion.lapsos %></td>
            <td><div class="btn-group">
            <button type="button" class="btn btn-xs btn-default" data-toggle="dropdown">
               <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "#{(image_tag('view.png', size: '20x20'))} Ver".html_safe, planificacion, :data => {:toggle => 'modal',:target => '.bs-example-modal-panel1'} %></li>
              <li><%= link_to "#{(image_tag('edit.png', size: '20x20'))} Editar".html_safe, edit_planificacion_path(planificacion), :data => {:toggle => 'modal',:target => '.bs-example-modal-panel2'} %></li>
              <li class="divider"></li>
              <li><%= link_to "#{(image_tag('delete.png', size: '20x20'))} Eliminar".html_safe, planificacion, method: :delete, data: { confirm: 'Seguro que desea eliminar el registro?' } %></li>
            </ul>
          </div><!-- btn-group -->
          </td>
          <!-- informacion sobre los detalles de la planificacion -->
          <td><div class="btn-group">
            <button type="button" class="btn btn-xs btn-info" data-toggle="dropdown">
               <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "#{(image_tag('view.png', size: '20x20'))} Ver".html_safe, planificacion, :data => {:toggle => 'modal',:target => '.bs-example-modal-panel1'} %></li>
              <li><%= link_to "#{(image_tag('edit.png', size: '20x20'))} Editar".html_safe, edit_planificacion_path(planificacion), :data => {:toggle => 'modal',:target => '.bs-example-modal-panel2'} %></li>
              <li class="divider"></li>
              <li><%= link_to "#{(image_tag('delete.png', size: '20x20'))} Eliminar".html_safe, planificacion, method: :delete, data: { confirm: 'Seguro que desea eliminar el registro?' } %></li>
            </ul>
          </div><!-- btn-group -->
          </td>
          <!-- reportes sobre la planificacion -->
          <td><div class="btn-group">
            <button type="button" class="btn btn-xs btn-danger" data-toggle="dropdown">
               <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "#{(image_tag('view.png', size: '20x20'))} Ver".html_safe, planificacion, :data => {:toggle => 'modal',:target => '.bs-example-modal-panel1'} %></li>
              <li><%= link_to "#{(image_tag('edit.png', size: '20x20'))} Editar".html_safe, edit_planificacion_path(planificacion), :data => {:toggle => 'modal',:target => '.bs-example-modal-panel2'} %></li>
              <li class="divider"></li>
              <li><%= link_to "#{(image_tag('delete.png', size: '20x20'))} Eliminar".html_safe, planificacion, method: :delete, data: { confirm: 'Seguro que desea eliminar el registro?' } %></li>
            </ul>
          </div><!-- btn-group -->
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="modal fade bs-example-modal-panel0" tabindex="-1" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content"></div>
        </div>
    </div>

    <div class="modal fade bs-example-modal-panel1" tabindex="-1" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content"></div>
        </div>
    </div>

     <div class="modal fade bs-example-modal-panel2" tabindex="-1" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content"></div>
        </div>
    </div>