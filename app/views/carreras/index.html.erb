<table id="basicTable" class="table table-striped table-bordered responsive">
  <thead class="">    
  <tr>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Area academica</th>
      <th id="action">Ver</th>
          <th id="action">Editar</th>
          <th id="action">Eliminar</th>
    </tr>
  </thead>

  <tbody>
    <% @carreras.each do |carrera| %>
      <tr>
        <td><%= carrera.nombre %></td>
        <td><%= carrera.telefono %></td>
        <td><%= carrera.area_academica.nombre %></td>
        <td id="action"><%= link_to (image_tag('view.png', size: '20x20')), carrera, :data => {:toggle => 'modal',:target => '.bs-example-modal-panel1'} %></td>
        <td id="action"><%= link_to (image_tag('edit.png', size: '20x20')), edit_carrera_path(carrera), :data => {:toggle => 'modal',:target => '.bs-example-modal-panel2'} %></td>
        <td id="action"><%= link_to (image_tag('delete.png', size: '20x20')), carrera, method: :delete, data: { confirm: 'Seguro que desea eliminar el registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

