<h1>Listing planes_evaluacion</h1>

<table>
  <thead>
    <tr>
      <th>Planificacion</th>
      <th>Evaluacion</th>
      <th>Fecha</th>
      <th>Puntuacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planes_evaluaciones.each do |plan_evaluacion| %>
      <tr>
        <td><%= plan_evaluacion.planificacion_id %></td>
        <td><%= plan_evaluacion.evaluacion_id %></td>
        <td><%= plan_evaluacion.fecha %></td>
        <td><%= plan_evaluacion.puntuacion %></td>
        <td><div class="btn-group">
            <button type="button" class="btn btn-xs btn-info" data-toggle="dropdown">
               <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "#{(image_tag('view.png', size: '20x20'))} Ver".html_safe, plan_evaluacion, :data => {:toggle => 'modal',:target => '.bs-example-modal-panel1'} %></li>
              <li><%= link_to "#{(image_tag('edit.png', size: '20x20'))} Editar".html_safe, edit_plan_evaluacion_path(plan_evaluacion), :data => {:toggle => 'modal',:target => '.bs-example-modal-panel2'} %></li>
              <li class="divider"></li>
              <li><%= link_to "#{(image_tag('delete.png', size: '20x20'))} Eliminar".html_safe, plan_evaluacion, method: :delete, data: { confirm: 'Seguro que desea eliminar el registro?' } %></li>
            </ul>
          </div><!-- btn-group -->
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan evaluacion', new_plan_evaluacion_path %>
